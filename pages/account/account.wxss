/* pages/account/account.wxss */
.container{
  position: relative;
}
.money-detail{
  position: absolute;
  right: 30rpx;
  top: 24rpx;
}
.icon-money{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.myaccount{
  text-align: center;
  font-size: 28rpx;
  padding: 80rpx 0 0;
}
.myaccount text{
  display: block;
}
.money{
  font-size: 40rpx;
}
.on-money{
  overflow: hidden;
  padding: 20rpx 0;
}
.on-money text{
  float: left;
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.income{
  border-right: 1px solid #00a7ed;
}
.myremain{
  padding: 20rpx 0 30rpx;
}
.recharge-btn{
  margin: 60rpx 50rpx 30rpx;
  background: #00a7ed;
  color: #fff;
}
.charge-btn{
  margin: 0 50rpx;
  border:1rpx solid #00a7ed;
  color: #00a7ed;
}