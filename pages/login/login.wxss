/* pages/login/login.wxss */

.login {
  padding-top: calc((100% - 500rpx)/2);
}

.phonenumberInput, .passwordInput, .repasswordInput,.re-pick {
  width: 90%;
  border: 1rpx solid #ccc;
  margin: 0 auto 40rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 80rpx;
}

.loginButton, .registButton {
  width: 90%;
  border-radius: 10rpx;
  box-shadow: 0 1px 5px #dcdbd7;
}

.loginButton, .regist .registButton {
  background: #4a4c5b;
  margin-bottom: 40rpx;
  color: #fff;
}

.regist .registButton {
  margin-bottom: 200rpx;
}

.registButton {
  background: #fff;
  border: 1rpx solid #4a4c5b;
  color: #4a4c5b;
  margin-bottom: 200rpx;
}

.test-code {
  overflow: hidden;
  width: 90%;
  margin: 0 auto 40rpx;
}

.smscodeInput, .smscodeButton {
  float: left;
  padding-left: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  height: 80rpx;
  line-height: 80rpx;
}

.smscodeInput {
  width: 60%;
  border-radius: 15rpx 0 0 15rpx;
  border-right: none;
  font-size: 32rpx;
}

.smscodeButton {
  width: 40%;
  border-radius: 0 15rpx 15rpx 0;
  background: #4a4c5b;
  font-size: 24rpx;
  color: #fff;
  border-left: none;
}

.regist {
  padding-top: calc((100% - 500rpx)/2);
}

.re-pick {
  line-height: 80rpx;
  color: #888;
}

.arrow {
  top: 30rpx;
  right: 20rpx;
}