.main{
  padding: 0 24rpx;
}
.rec-pic{
  display: block;
  margin: 0 auto;
  width: 100%;
}
.rec-row-rt{
  float: right;
}
.rec-row{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.rec-row-rt{
  color: #666;
}
.rec-row-details{
  color: #666;
  margin-top: 24rpx;
