}
.label{
  border: 1px solid #00a7ed;
  display: inline-block;
  padding: 0 14rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  height: 34rpx;
  line-height: 32rpx;
  color: #00a7ed;
  margin-top: 28rpx;
  margin-bottom: 40rpx;
}
