<!--pages/recdetails/recdetails.wxml-->
<view class="content">
  <image class="rec-pic" mode="widthFix" src="http://images.sw2025.com{{showimage}}"></image>
  <view class="main">
    <view class="rec-row">
      <text class="rec-row-lt">公司名称</text>
      <text class="rec-row-rt">{{enterprisename}}</text>
    </view>
    <view class="rec-row">
      <text class="rec-row-lt">需求分类</text>
      <text class="rec-row-rt">{{domain1}}</text>
    </view>
    <view class="rec-row">
      <text class="rec-row-lt">发布时间</text>
      <text class="rec-row-rt">{{responsetime}}</text>
    </view>
    <view class="rec-row">
      <text class="rec-row-lt">办事详情</text>
      <view class="rec-row-details">{{brief}}</view>
    </view>
    <text class="label">{{domain2}}</text>
    <view class="btns" hidden="{{btnShow}}">
      <button type="primary" bindtap = "response" class="respond">响 应</button>
    </view>
  </view>
</view>